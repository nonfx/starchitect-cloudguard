{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": ["es2018", "dom", "es2015", "es2015.promise"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@codegen/*": ["codegen/*"]
    },
    "outDir": "dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "types": ["jest", "node"]
  },
  "include": [
    "runtime/**/*.ts",
    "runtime/**/*.tsx",
    "codegen/**/*.ts",
    "codegen/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
